mixin loader
    .preloader
        .spinner-grow(style="width: 3rem; height: 3rem;" role="status")
            .visually-hidden Loading...

mixin page-title(title,button)
    .page-header.mb-2
        .d-flex.justify-content-between
            h3 #[b= title]
            if button 
                button.btn.btn-primary(href='/admin/users/create') 
                    i.fas.fa-add
                    span.mx-2= button

mixin dataTable(header)
    .table-responsive.table-container(style='position: relative;')    
        table.dataTable.table.table-hover.m-0.mb-5.rounded.bg-light(id="data-table")
            thead.bg-white 
                tr
                    th(style='width: 50px;text-align:center') #
                    //- Start Table Header
                    each val,index in header
                        th(class=`${index == 0 ? '':'text-center'}`) #[b= val]
            tbody


mixin inputField(label,name,type)
    .form-group
        label(for=`${name}`)= label
        input.form-control(id=`${name}` name=`${name}` type=`${type ? type : 'text'}` placeholder=`${label}`)

mixin selectField(label,name,options)
    .form-group
        label(for="publish-status")= label
        select#publish-status.form-control
            each val,index in options
                option(value=`${val.value}`)= val.name
